{{#each errors}}
<div class="alert aleert-danger">{{text}}</div>
{{else}} {{/each}}

<div class="card card-body">
  <h2>Edit Video Idea</h2>
  <form action="/ideas/{{idea.id}}?_method=put" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" autocomplete="false" name="title" value="{{idea.title}}" required>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" required>{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-light" style="background-color : #14c0a2; color : azure">Submit</button>
  </form>
</div>